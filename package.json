{
  "name": "backend",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "dev": "NODE_ENV=development nodemon -e ts -w ./src -x ts-node -r tsconfig-paths/register src/server.ts",
    "build": "NODE_ENV=production rimraf dist && tsc",
    "start": "npm run build && NODE_ENV=production node dist/server.js",
    "test": "NODE_ENV=test jest --detectOpenHandles",
    "test:watch": "NODE_ENV=test jest --watchAll",

    "lint": "eslint . --ext .ts",
    "format": "prettier --ignore-path .gitignore --write \"**/*.+(js|ts|json)\"",


    "create:migration": "npm run knex migrate:make",


    "migrate": "npm run knex migrate:latest",
    "rollback": "npm run knex migrate:rollback",

    "knex": "ts-node -r tsconfig-paths/register -r dotenv/config node_modules/knex/bin/cli.js --knexfile src/db/config.db.ts"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "cors": "^2.8.5",
    "dotenv": "^16.0.3",
    "express": "^4.18.2",
    "knex": "^2.3.0",
    "module-alias": "^2.2.2",
    "pg": "^8.8.0",
    "rimraf": "^3.0.2",
    "socket.io": "^4.5.3",
    "winston": "^3.8.2"
  },
  "devDependencies": {
    "@types/express": "^4.17.14",
    "@types/jest": "^29.2.0",
    "@types/module-alias": "^2.0.1",
    "@types/node": "^18.11.6",
    "@typescript-eslint/eslint-plugin": "^5.41.0",
    "@typescript-eslint/parser": "^5.41.0",
    "eslint": "^8.26.0",
    "eslint-config-prettier": "^8.5.0",
    "jest": "^29.2.2",
    "nodemon": "^2.0.20",
    "prettier": "^2.7.1",
    "ts-jest": "^29.0.3",
    "ts-node": "^10.9.1",
    "tsconfig-paths": "^4.1.0",
    "tslib": "^2.4.0",
    "typescript": "^4.8.4"
  }
}
